@import url('https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap');

figure {
  text-align: center;
  img {
    display: block;
    margin: 0 auto;
    }
}
body
  font-family: "Calibri", sans-serif;
  font-size: 20px;
  line-height: 1.5;

code
  font-family: "Calibri", sans-serif;

a
  color: #228B22;
  text-decoration: none;
  hover
    text-decoration: underline;

img
  display: block;
  margin: 0 0 1rem;
  border-radius: 5px;
  max-width: 100%;


.sidebar-nav-item
  font-family: "Calibri", sans-serif;
  text-align: center;
  color: white;

.sidebar
  background-color: #00622c
  padding: 2rem 1rem;
  h1
    margin-top: 0;
    font-weight: 300;
  h3
    font-weight: 400;

  @media (min-width: 768px)
    bottom: 0;
    left: 0;
    position: fixed;
    top: 0;
    width: 14rem;

.sidebar-sticky
  @media (min-width: 768px)
    position: absolute;
    right:  1rem;
    top: 1rem;
    left:   1rem;

.col
  display: inline-block;
  padding-right: 10px;
  margin-bottom: 5px;
  text-align: center;
  justify-content: center;
  max-width: 300px;
  width: 15rem;

.col > img
  width: 150px;
  height: 150px;
  margin-left: 25%
  

.col-small
  display: inline-block
  padding-right: 7px
  text-align: center

.next
  float: right
  margin-bottom: 50px

.prev
  float: left
  margin-bottom: 50px

.day
  padding-right: 25px

